<% layout('./layouts/main') -%>

<main class="container my-4 d-flex align-items-center">
  <div class="card-body text-center p-5">
    <h1 class="display-6 fw-semibold mb-2">Olá <%= user.name %></h1>
    <p class="text-secondary mb-4">Você está autenticado. Use o botão abaixo para continuar ou sair da sessão.</p>

    <div class="d-flex gap-2 justify-content-center">
      <button class="btn btn-outline-danger px-4" id="btn-sair">Sair</button>
    </div>
  </div>
</main>

<!-- Listagem de usuários -->
<section class="container my-4">
  <h2 class="mb-3">Lista de Usuários</h2>
  <ul class="list-group">
    <% for (const usuario of users) { %>
      <li class="list-group-item">
        <strong><%= usuario.name %></strong> - <%= usuario.email %>
      </li>
    <% } %>
  </ul>
</section>